<resources>

    <!-- Base application theme. -->
    <style name="Theme.ShareLocation" parent="Theme.AppCompat.Light.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/delicate_lace</item>
        <item name="colorPrimaryVariant">@color/yellow_sea</item>
        <item name="colorOnPrimary">@color/heavy_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/majesty</item>
        <item name="colorSecondaryVariant">@color/heavy_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/chengeTextPopMenu</item>
        <!--  <item name="android:itemBackground">@drawable/delete_confirmation_dialoge</item> -->

        <item name="android:popupMenuStyle">@style/PopupMenutemp</item>
    </style>

    <style name="PopupMenutemp" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/delete_confirmation_dialoge</item>


    </style>

    <style name="chengeTextPopMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/majesty</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="NoStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.ShareLocation.Fullscreen" parent="Theme.ShareLocation">
        <item name="android:actionBarStyle">@style/Widget.Theme.ShareLocation.ActionBar.Fullscreen
        </item>


        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ShareLocation.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>