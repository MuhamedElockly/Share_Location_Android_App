<resources>
    <!-- Base application theme. -->
    <style name="Theme.ShareLocation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/delicate_lace</item>
        <item name="colorPrimaryVariant">@color/yellow_sea</item>
        <item name="colorOnPrimary">@color/heavy_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/majesty</item>
        <item name="colorSecondaryVariant">@color/heavy_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/delicate_lace</item>
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>


    </style>

    <style name="ThemeOverlay.ShareLocation.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>